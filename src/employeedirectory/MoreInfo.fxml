            <TextField fx:id="txtEmailAdd" text="" GridPane.columnIndex="2" GridPane.rowIndex="7" editable="false"/>
    
            <Label text="Job Details:" alignment="BASELINE_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
            <TextField fx:id="txtSalary" text="" GridPane.columnIndex="2" GridPane.rowIndex="9" editable="false"/>
            <TextField fx:id="txtJobPos" text="" GridPane.columnIndex="2" GridPane.rowIndex="10" editable="false"/>
            <TextField fx:id="txtDeptName" text="" GridPane.columnIndex="2" GridPane.rowIndex="11" editable="false"/>
    
        </GridPane>
    </center>
        <bottom>
            <HBox alignment="BOTTOM_RIGHT"  >
                <Button fx:id="btnHome" onAction="#showHomePage" text="Home" />
                <Button fx:id="btnDelete" text="Delete"/>
                <Button fx:id="btnEdit" text="Edit"/>
                <Button fx:id="btnSaveEdit" text="Save" disable="true" />
            </HBox>    
        </bottom>
</BorderPane>